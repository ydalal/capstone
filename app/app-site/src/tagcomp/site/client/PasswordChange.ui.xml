<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel>
	<table>
		<tr>
			<td>Clave actual:</td>
			<td style="width:80px;"><g:PasswordTextBox ui:field="actual"/></td>
		</tr>
		<tr>
			<td>Nueva clave:</td>
			<td><g:PasswordTextBox ui:field="newPass"/></td>
		</tr>
		<tr>
			<td>Confirme clave:</td>
			<td><g:PasswordTextBox ui:field="confirm"/></td>
		</tr>
		<tr>
			<td></td>
			<td style="text-align: right;"><g:Button ui:field="submit">Cambiar</g:Button></td>
		</tr>
	</table>
	</g:HTMLPanel>
</ui:UiBinder>